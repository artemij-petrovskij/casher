<div class="row">
  <div class="col s12">
    <ul class="tabs">
      <li class="tab col s6"><a class="active" href="#login">Войти</a></li>
      <li class="tab col s6"><a href="#register">Зарегистрироваться</a></li>
    </ul>
  </div>
  <div id="login" class="col s6 offset-s3">

    <h2>Войти</h2>
    <form action="/auth/login" method="POST">
      <div class="input-field">
        <input id="email" type="text" class="validate" name="email" required>
        <label for="email">email</label>
        <span class="helper-text" data-error="Введите email"></span>
      </div>
      <div class="input-field">
        <input id="password" type="password" name="password" class="autocomplete" required>
        <label for="password">password</label>
        <span class="helper-text" data-error="Введите password"></span>
      </div>
      <button class="btn" type="submit">GO</button>
    </form>

  </div>
  <div id="register" class="col s6 offset-s3">

    <h2>Зарегистрироваться</h2>
    <form action="/auth/register" method="POST">
      <div class="input-field">
        <input id="regemail" type="text" class="validate" name="email" required>
        <label for="regemail">email</label>
        <span class="helper-text" data-error="Введите email"></span>
      </div>
      <div class="input-field">
        <input id="regpassword" type="password" name="password" class="autocomplete" required>
        <label for="regpassword">password</label>
        <span class="helper-text" data-error="Введите password"></span>
      </div>
      <div class="input-field">
        <input id="confirm" type="password" name="password" class="autocomplete" required>
        <label for="confirm">password confirm</label>
        <span class="helper-text" data-error="Введите password"></span>
      </div>
      <button class="btn" type="submit">Reg</button>
    </form>

  </div>
</div>

<script>

  document.addEventListener('DOMContentLoaded', function () {
    var instance = M.Tabs.init(document.querySelectorAll('.tabs'));
  });

</script>